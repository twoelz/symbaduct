BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        Label:
            id: admin_info
            text: 'Connecting...'
        Button:
            id: force_update_config
            text: 'update'
            size_hint_x: None
            width: '60dp'
            on_press: app.force_update_config()

        Button:
            id: send_mod_config
            text: 'send'
            size_hint_x: None
            width: '50dp'
            disabled: True
            on_press: app.send_mod_config()
    AccordionAdmin:
        orientation: 'vertical'
        AccordionItemSection:
            id: options_accordion
            title: 'utilities'
            ScrollViewSection:
                GridLayoutSection:
                    id: utilities
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: 'start'
                        Button:
                            text: ''
                            on_press: app.force_game_ready()

        AccordionItemSection:
            id: main_accordion
            title: 'conditions'
            ScrollViewSection:
                GridLayoutSection:
                    id: main

        AccordionItemSection:
            id: save_accordion
            title: 'save'
            ScrollViewSection:
                GridLayoutSection:
                    id: save


<ScrollViewSection@ScrollView>:
    scroll_timeout: 40
    scroll_distance: 1
    size_hint: 1, 1

<GridLayoutSection@GridLayout>:
    cols: 1
    spacing: 4
    row_default_height: '40dp'
    size_hint_y:  None
    height: self.minimum_height
<AccordionItemSection@AccordionItem>
    changed: 0