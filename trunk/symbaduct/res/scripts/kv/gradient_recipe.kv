#:import Gradient kivy_gradients.Gradient

    Label:
        font_size: '36sp'
        halign: 'center'
        text: 'some text goes here'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                texture: Gradient.horizontal((0, 0, 0, 1), (0.4, 0.4, 0, 1))