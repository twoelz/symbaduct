<ScreenGame>:
    RelativeLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        RelativeLayout:
            id: game_area
            width: '1024dp'
            height: '768dp'
            pos: (self.parent.width-self.width)/2, (self.parent.height-self.height)/2
            size_hint: None, None
            canvas.before:
                Color:
                    rgba: root.r, root.g, root.b, root.a
                Rectangle:
                    size: self.size
            RelativeLayout: # adjacent quadrant
                size_hint: None, None
                size: ('400dp', '346dp')
                pos: ('561dp', '43dp')
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        size: self.size
                FloatLayout:
                    width: '388dp'
                    height: '334dp'
                    size_hint: None, None
                    pos: (self.parent.width-self.width)/2, (self.parent.height-self.height)/2
                    canvas.before:
                        Color:
                            rgba: root.adj_r, root.adj_g, root.adj_b, root.adj_a
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    PointAdjButton:

                    AdjButton:
                        pos: ('298dp', '26dp')
                        text: 'f'
                    AdjButton:
                        pos: ('298dp', '126dp')
                        text: 'n'
                    RelativeLayout:
                        size_hint: None, None
                        size: ('158dp', '66dp')
                        pos: ('178dp', '260dp')
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            RoundedRectangle:
                                size: self.size
                                segments: [15,]
                        RelativeLayout:
                            width: '154dp'
                            height: '61dp'
                            size_hint: None, None
                            pos: (self.parent.width-self.width)/2, (self.parent.height-self.height)/2
                            canvas.before:
                                Color:
                                    rgba: 1, 1, 1, 1
                                RoundedRectangle:
                                    size: self.size
                                    segments: [15,]
                            Widget:
                                Image:
                                    id: adj_coin
                                    pos: (self.parent.height - self.height) / 2, (self.parent.height - self.height) / 2
                                    width: self.parent.height
                                    height: self.parent.height
                                    source: 'res/images/Coin_(Mario_Kart_8).png'
                                    mipmap: True
                    Label:
                        id: adj_points
                        size_hint: None, None
                        size: ('92dp', '66dp')  # same as layout - 66 to width
                        pos: ('244dp', '260dp')  # same as layout + 66 to x
                        color: 0, 0, 0, 1
                        font_size: '24dp'
                        text_size: self.size
                        valign: 'middle'
                        halign: 'center'
                        text: '0'

                    Label: # +1
                        id: adj_plus
                        size_hint: None, None
                        size: ('66dp', '66dp')  # same as before 66 width
                        pos: ('240dp', '276dp')  # same as bfore, up 16, left 4
                        color: 10.7, 0.62, 0.1, 1 # average color of coin image
                        font_size: '24dp'
                        text_size: self.size
                        valign: 'middle' # left aligned though
                        halign: 'left'

                FloatLayout: # ADJ OVERLAY
                    id: adj_overlay
                    width: '388dp'
                    height: '334dp'
                    size_hint: None, None
                    pos: (self.parent.width-self.width)/2, (self.parent.height-self.height)/2
                    canvas.before:
                        Color:
                            rgba: 0.5, 0.5, 0.5, root.adj_overlay
                        Rectangle:
                            pos: self.pos
                            size: self.size


            RelativeLayout: # referent quadrant
                size_hint: None, None
                size: ('600dp', '519dp')
                pos: ('20dp', '199dp')
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: 0,0
                        size: self.size
                FloatLayout:
                    width: '582dp'
                    height: '501dp'
                    size_hint: None, None
                    pos: (self.parent.width-self.width)/2, (self.parent.height-self.height)/2
                    canvas.before:
                        Color:
                            rgba: root.ref_r, root.ref_g, root.ref_b, root.ref_a
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    PointRefButton:
                        id: point_button
                    RefButton:
                        pos: ('447dp', '39dp')
                        text: 'f'
                        on_press: app.f_click()
                    RefButton:
                        pos: ('447dp', '189dp')
                        text: 'n'
                        on_press: app.n_click()
                    RelativeLayout:
                        size_hint: None, None
                        size: ('237dp', '99dp')
                        pos: ('267dp', '390dp')
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, 1
                            RoundedRectangle:
                                size: self.size
                                segments: [15,]
                        RelativeLayout:
                            width: '231dp'
                            height: '93dp'
                            size_hint: None, None
                            pos: (self.parent.width-self.width)/2, (self.parent.height-self.height)/2
                            canvas.before:
