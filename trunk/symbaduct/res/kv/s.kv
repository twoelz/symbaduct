
<SVGLayout>

<MyWidget>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.8, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        id: but1
        width: 10
        height: 10
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            pos: self.parent.pos
            size: self.parent.size
            id: but1_back

    Button:
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            pos: self.parent.pos
            size: self.parent.size
            id: but2_back

